<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Reader.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Reader.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="Reader"
    Shell.BackgroundColor="{StaticResource ReaderLightBrown}">


    <ShellContent
        
        ContentTemplate="{DataTemplate local:MainView}"
        Route="MainView" />
    <ShellContent 
        
        Route="///ReadView" 
        ContentTemplate="{DataTemplate local:ReadView}" />
    <ShellContent 
        
        Route="///SearchView" 
        ContentTemplate="{DataTemplate local:SearchView}" />
    <ShellContent 
    
    Route="///ContentView" 
    ContentTemplate="{DataTemplate local:ContentView}" />

</Shell>
